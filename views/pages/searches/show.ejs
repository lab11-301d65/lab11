<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SHOW STUFF</title>
</head>

<body>

  <%- include('../layout/header.ejs') %>

  <h1>RENDERING BOOKS N STUFF</h1>
  <ul>
    <% for(let i =0; i < booksToFrontEnd.length; i++){ %>
    <li>
      <h2><%= booksToFrontEnd[i].title %></h2>
      <h3><%= booksToFrontEnd[i].author %></h3>
      <p><%= booksToFrontEnd[i].description %></p>
      <img src="<%= booksToFrontEnd[i].img %>" alt="">
      <p>ISBN: <%= booksToFrontEnd[i].isbn %></p>

      <form action="/books" method="POST">
        <fieldset>
          <legend>Save a book</legend>
          <input name ="title" type ="hidden" value="<%= booksToFrontEnd[i].title %>">
          <input name ="author" type ="hidden" value="<%= booksToFrontEnd[i].author %>">
          <input name ="description" type ="hidden" value="<%= booksToFrontEnd[i].description %>">
          <input name ="img" type ="hidden" value="<%= booksToFrontEnd[i].img %>">
          <input name ="isbn" type ="hidden" value="<%= booksToFrontEnd[i].isbn %>">
          <input type="submit" value="save book">
        </fieldset>
      </form>

    </li>
   <% } %>
  </ul>

</body>

</html>